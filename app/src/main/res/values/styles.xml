<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseMenuTheme">
        <item name="android:elevation">10dp</item>
        <item name="elevation">10dp</item>
        <item name="android:background">@drawable/bottom_nav_background</item>
    </style>

    <style name="BaseTextStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/base_color</item>
    </style>

    <style name="BaseItemButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="elevation">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxStrokeColor">@color/base_color</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
</resources>